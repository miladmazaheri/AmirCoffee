@page
@model AmirCoffee.Web.Pages.Management.Menu.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
	    <th>
		    @Html.DisplayNameFor(model => model.Menu[0].Order)
	    </th>
	    <th>
		    @Html.DisplayNameFor(model => model.Menu[0].Title)
	    </th>
	    <th>
		    @Html.DisplayNameFor(model => model.Menu[0].Url)
	    </th>

	    <th>
		    @Html.DisplayNameFor(model => model.Menu[0].Position)
	    </th>
	    <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Menu) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.Order)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Title)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Url)
		</td>

		<td>
			@Html.DisplayFor(modelItem => item.Position)
		</td>
		<td>
			<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
			<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
			<a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
		</td>
	</tr>
}
    </tbody>
</table>
