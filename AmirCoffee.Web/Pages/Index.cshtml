@page
@model IndexModel
@{
	Layout = "Shared/_MainLayout";
    ViewData["Title"] = "Home page";
}

<!-- carousel -->
<section id="carousel">

	<span class="pattern"></span>

	<div class="main-text">پیشرو و بی رقیب باشید</div>
	<div class="sub-text">
		<ul class="slide-text">
			<li>ما برای پیشرفت شما تلاش میکنیم</li>
			<li>تا در بین رقبای خود پیشتاز باشید</li>
		</ul>
	</div>

	<div id="wrapper-slider">
		<div id="controls">
			<div class="prev"></div>
			<div class="next"></div>
		</div>
	</div>

	<a href="index.html#portfolio" class="scroll-btn anchor"></a>

</section>

<div id="portfolio-box">
	<div class="spinner"></div>
	<div class="inner"></div>
</div>

<section id="portfolio">
	<div class="inner">
		<ul id="rb-grid" class="list rb-grid">

			@foreach (var cr in Model.Carousels)
			{
				<li>
					<a class="item" href="#">
						<img src="@cr.ImageUrl" alt="">
						<div class="over">
							<h2 class="page-title">@cr.Title<span class="border"></span></h2>
							<h3 class="page-subtitle">
								@cr.SubTitle
							</h3>
							<img class="client" src="./img/portfolio-clients/1w.png" alt="">
						</div>
					</a>
				</li>
			}
			
		</ul>

		<a href="#" class="more rotate"><span class="rotate">+</span></a>
	</div>
</section>

<section id="about">

	<div class="gray">

		<div class="wrap">

			<h2 class="page-title">درباره ما<span class="border"></span></h2>
			<h3 class="page-subtitle">ما برای پیشرفت شما تلاش میکنیم<br>لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ است</h3>

			<div class="screens">
				<div class="left"><img src="img/about/left.png" alt=""></div>
				<div class="right"><img src="img/about/right.png" alt=""></div>
				<div class="center"><img src="img/about/center.png" alt=""></div>
			</div>
		</div>
	</div>

</section>

